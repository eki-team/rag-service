# === OpenAI Configuration ===
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.2

# === Vector Backend (cosmos | pgvector) ===
VECTOR_BACKEND=cosmos

# === Cosmos DB Configuration (Option A - PROD) ===
COSMOS_URL=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key-here
COSMOS_DB=nasa_bio
COSMOS_CONTAINER=pub_chunks
COSMOS_PARTITION_KEY=/pk
COSMOS_VECTOR_FN=

# === PostgreSQL + pgvector (Option B - COMMENTED) ===
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=nasa_rag
# DB_HOST=localhost
# DB_PORT=5432

# === NASA Configuration ===
NASA_MODE=true
NASA_ALLOWED_SOURCES=OSDR,LSL,TASKBOOK
NASA_GUIDED_ENABLED=false
NASA_DEFAULT_ORG=nasa

# === Retrieval Configuration ===
DEFAULT_TOP_K=8
MAX_TOP_K=20
MIN_SIMILARITY=0.70
ENABLE_RERANK=false

# === Rate Limiting (Optional) ===
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# === Logging ===
LOG_LEVEL=INFO
LOG_RETRIEVAL=true
LOG_GROUNDING=true