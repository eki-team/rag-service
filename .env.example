# === OpenAI Configuration (solo para LLM synthesis) ===
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.2

# === Embeddings Configuration (sentence-transformers local) ===
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=32

# === Vector Backend (mongodb | pgvector) ===
VECTOR_BACKEND=mongodb

# === MongoDB Configuration (Option A - PROD) ===
MONGODB_URI=mongodb://localhost:27017
# Para MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=nasa_bio
MONGODB_COLLECTION=pub_chunks
MONGODB_VECTOR_INDEX=vector_index

# === PostgreSQL + pgvector (Option B - COMMENTED) ===
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=nasa_rag
# DB_HOST=localhost
# DB_PORT=5432

# === NASA Configuration ===
NASA_MODE=true
NASA_ALLOWED_SOURCES=OSDR,LSL,TASKBOOK
NASA_GUIDED_ENABLED=false
NASA_DEFAULT_ORG=nasa

# === Retrieval Configuration ===
DEFAULT_TOP_K=8
MAX_TOP_K=20
MIN_SIMILARITY=0.70
ENABLE_RERANK=false

# === Rate Limiting (Optional) ===
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001

# === Logging ===
LOG_LEVEL=INFO
LOG_RETRIEVAL=true
LOG_GROUNDING=true